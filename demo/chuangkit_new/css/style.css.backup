/**** Page Turn ****/

.page_turn {
    margin: 0;
    padding: 0;
    position: relative;
}
.page_turn li {
    list-style: none;
    width: 10px;
    height: 10px;
    border: 1px solid;
    border-radius: 50%;
}
.page_turn .active_circle {
    position: absolute;
    transition: all .3s;
}

/**** Active Background ****/

.active_background {
    background-image: url(../bg.jpg);
    height: 500px;
    background-position: 50px 10px; /*left top*/
    transition: all .3s;
}

