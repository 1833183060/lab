.medium_logo_fade-enter-active, .medium_logo_fade-leave-active {
    transition: all .4s;
}
.medium_logo_fade-enter, .medium_logo_fade-leave-to {
    transform: translateX(20px);
    opacity: 0;
}

.medium_content_fade-enter-active, .medium_content_fade-leave-active {
    transition: transform .6s;
}
.medium_content_fade-enter, .medium_content_fade-leave-to {
    transform: translateX(20px);
    opacity: 0;
}
